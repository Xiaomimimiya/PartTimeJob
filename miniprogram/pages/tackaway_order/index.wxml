<view class="box">
    <view class="cu-list menu ">
        <view class="avatar">
            <image style="width: 150rpx;height: 150rpx;" src="{{take_detail.send_avatar}}" mode="" />
            <text style="font-size: 40rpx;">{{take_detail.send_name}}</text>
        </view>
    </view>
    <view class="cu-list menu sm-border">
        <view class="cu-item">
            <view class="content padding-tb-sm">
                <view class="top_content">
                    <image src="/assets/images/comm/start.png" mode="" />
                    <text>从哪里去取外卖</text>
                </view>
                <view class="bottom">
                    <text style="color:rgb(238, 18, 18);">{{take_detail.start_address}}</text>
                </view>
            </view>
        </view>
        <view class="cu-item">
            <view class="content padding-tb-sm">
                <view class="top_content">
                    <image src="/assets/images/comm/end.png" mode="" />
                    <text>送达位置详情</text>
                </view>
                <view class="bottom">
                    <text style="color:rgb(235, 17, 17);">{{take_detail.end_address}}</text>
                </view>
            </view>
        </view>
        <view class="cu-item">
            <view class="content padding-tb-sm">
                <view class="top_content">
                    <image src="/assets/images/comm/question.png" mode="" />
                    <text>接单要求详情</text>
                </view>
                <view class="bottom">
                    <text>{{take_detail.desc}}</text>
                </view>
            </view>
        </view>

    </view>
    <view class="cu-list menu sm-border">
        <view class="cu-item">
            <view class="content padding-tb-sm">
                <view class="top_content">
                    <image src="/assets/images/comm/time.png" mode="" />
                    <text>可配送时间</text>
                </view>
                <view class="bottom">
                    <text style="color:rgb(255, 2, 2);font-size: 33rpx;">{{take_detail.endtime}}</text>
                </view>
            </view>
        </view>
        <view class="cu-item">
            <view class="content padding-tb-sm">
                <view class="top_content">
                    <image src="/assets/images/comm/price.png" mode="" />
                    <text class="price">接单价格</text>
                </view>
                <view class="bottom">
                    <text style="color: #e61e1e; font-size: 40rpx;">￥{{take_detail.price}}</text>
                </view>
            </view>
        </view>

    </view>
</view>
<view class="do_express">
    <view class="cu-bar input">
        <button class="cu-btn round bg-cyan shadow" bindtap="startChat" data-item="{{take_detail}}">联系单主</button>
        <button class="cu-btn round bg-red shadow" bindtap="goOrder">立即接单</button>
    </view>
</view>
.pub-comment {
    background-color: #74aaa3;
    padding: 20rpx 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    bottom: 0;
    width: 100%;
  }
  
  .pub-left {
    background-color: #fff;
    color: #7f7f7f;
    border-radius: 50rpx;
    margin-right: 20rpx;
    width: 70%;
  }
  
  .pub-input {
    padding: 10rpx 20rpx;
    height: 80rpx;
    width: 100%;
  }
  
  .pub-button {
    color: #F3FAF4;
    background-color: #39B54A;
    border: solid 1rpx #7f7f7f;
    border-radius: 25%;
    height: 80rpx;
    width: 100rpx;
    margin-left: 50rpx;
    padding: 10rpx 10rpx;
    line-height: 50rpx;
    text-align: center;
  }
  
  .pub-button-with-text {
    color: #F3FAF4;
    background-color: #0099ff;
    border: solid 1rpx #7f7f7f;
    border-radius: 25%;
    height: 80rpx;
    width: 100rpx;
    margin-left: 60rpx;
    padding: 10rpx 10rpx;

    line-height: 50rpx;
    text-align: center;
  }
  .image_box image{
      width: 90rpx;
      height: 100rpx;
        padding-top: 10rpx;
        margin-left: 10rpx;
  }
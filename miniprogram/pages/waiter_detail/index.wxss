.job_detail {
    width: 98%;
    margin: 0 auto;
}

.top_box {
    width: 100%;
    height: 100rpx;
    background-color: #ffffff;
    margin-top: 10rpx;
    border-radius: 14rpx;

    display: flex;
    align-items: center;
    justify-content: space-around;
}

.top_box image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    
}

.top_box .company_content {
    margin-left: 10rpx;
}

.top_box .chat_btn {
    margin-left: 20rpx;
    margin-right: 5rpx;
}

.top_box button {
    width: 130rpx !important;
    height: 60rpx !important;
}

.top_box button text {
    font-size: 23rpx;
}

.middle_box {
    width: 100%;
    background-color: #ffffff;
    margin-top: 10rpx;
    border-radius: 14rpx;
}
.top_box .contact{
    margin-left: 35rpx;
    color: gray;
}
.middle_box .job_desc_title{
    font-size: 30rpx;
    font-weight: 700;
    color: #07132b;
    padding-left: 30rpx;
    padding-top: 15rpx;
}
.middle_box .location{
    font-size: 30rpx;
    font-weight: 500;
    color: #6f7174;
    padding-left: 30rpx;
    padding-top: 15rpx;
    
}
.middle_box .job_desc{
    margin-left: 30rpx;
    margin-top: 15rpx;
    padding-bottom: 10rpx;
}
.bottom_box {
    width: 100%;
    background-color: rgb(224, 218, 230);
    margin-top: 10rpx;
    border-radius: 14rpx;
}
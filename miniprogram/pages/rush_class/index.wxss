.express_container {
    width: 98%;
    margin: 0 auto;
}


.box {
    display: flex;
    align-items: center;
    background-color: #FFFFFF;
    margin-left: 10rpx;
    margin-bottom: 5rpx;
    margin-top: 5rpx;
    border-radius: 12rpx;
}

.box .express_image {
    width: 110rpx;
    height: 100rpx;
    margin-left: 10rpx;
}

.middle {
    width: 80%;
    margin-left: 10rpx;
}

.middle .top {
    display: flex;
    align-items: center;
    margin-top: 5rpx;
    margin-left: 15rpx;
    font-size: 30rpx;
    font-weight: 650;
    font-family: Arial, Helvetica, sans-serif;
}

.middle .start {
    margin-right: 15rpx;
}

.middle .row_image {
    height: 70rpx;
    width: 100rpx;
}

.middle .end {
    margin-left: 15rpx;
}

.middle .middle_bottom {
    display: flex;
    margin-left: 15rpx;
    font-size: 25rpx;
   color: rgb(32, 32, 32);
    margin-top: 3rpx;
    margin-bottom: 3rpx;
}

.middle_bottom .time {
    margin-left: 15rpx;
   
}

.bottom {
    display: flex;
    margin-left: 15rpx;
    font-size: 25rpx;
   
    color: gray;
    margin-bottom: 8rpx;
    margin-top: 5rpx;
}

.status {
    margin-right: 5rpx;
}

.status button {
    width: 120rpx !important;
    height: 50rpx !important;
}

.status .price {
    text-align: center;
    font-size: 35rpx;
    font-weight: 700;
    margin: 5rpx;
    color: red;
}

.btn-image {
    position: fixed;
    width: 130rpx;
    height: 130rpx;
    bottom: 300rpx;
    right: 20rpx;
}
.action button {
    width: 130rpx !important;
    height: 60rpx !important;
}
.searchInput{
    margin-left: 30rpx;
}
.van-button {
    margin-right: 10rpx !important;
    width: 20% !important;
    background-color: #f8f9fb !important;
}
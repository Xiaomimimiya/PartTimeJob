.top_image {
    width: 98%;
    margin: 0 auto;
}

image {
    width: 100%;
    height: 320rpx;
    border-radius: 20rpx;
}

.user {
    font-size: 40rpx;
    font-weight: 700;
    text-align: center;
    color: rgb(255, 0, 0);
    margin-bottom: 5rpx;
}

.title {
    display: flex;
    align-items: center;
}
.arrow{
    display: flex;
    align-items: center;
   
}
.arrow .arrow_text{
    position: absolute;
    right: 100rpx;
    color: rgb(0, 4, 255);
}
.arrow .arrow_image {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 30rpx;
}